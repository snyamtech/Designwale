<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:id="@android:id/background">
        <layer-list>
            <item android:height="@dimen/_5ssp">
                <shape>
                    <corners android:radius="@dimen/_8ssp" />
                    <gradient
                        android:angle="270"
                        android:centerColor="#11000000"
                        android:centerY="0.2"
                        android:endColor="#11000000"
                        android:startColor="#33000000"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:id="@+id/progressshape"
                    android:height="@dimen/_5ssp">
                    <clip>
                        <shape android:shape="rectangle">
                            <size android:height="@dimen/_5ssp" />
                            <corners android:radius="@dimen/_8ssp" />
                            <gradient
                                android:angle="0"
                                android:centerY="0.2"
                                android:endColor="#fc00ff"
                                android:startColor="#00dbde"
                                android:type="linear" />
                        </shape>
                    </clip>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>
