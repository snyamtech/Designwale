<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="@dimen/_2ssp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8ssp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:gravity="center"
                    android:text="Add Text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/active_color" />

            <com.snyam.designwale.ui.view.AutoFitEditText
                android:id="@+id/auto_fit_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="fill|end|start"
                android:hint="Add Text here"
                android:imeActionLabel="Done"
                android:imeOptions="actionPrevious"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:maxLength="250"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_15ssp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_4ssp"
                android:paddingRight="@dimen/_4ssp">

                <Button
                    android:id="@+id/btnCancelDialog"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_marginRight="@dimen/_4ssp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_border"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAddTextSDialog"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_marginLeft="@dimen/_3ssp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_button_ok"
                    android:text="Add"
                    android:textColor="@color/al_white"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>