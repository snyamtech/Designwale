<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg_login_screen"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5ssp"
        android:singleLine="true"
        android:text="CONFIRM"
        app:textSize='@{"font_body_size"}'
        android:textColor="@color/black"
        app:fonts='@{"extra_bold"}' />

    <androidx.cardview.widget.CardView
        android:id="@+id/cat_card"
        android:layout_width="@dimen/_45ssp"
        android:layout_margin="@dimen/_4ssp"
        android:layout_height="@dimen/_45ssp"
        app:cardBackgroundColor="@color/al_white"
        app:cardCornerRadius="@dimen/_5ssp"
        app:cardElevation="@dimen/_3ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_6ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_1ssp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:text="You Have Selected"
        app:textSize='@{"font_body_s_size"}'
        android:textColor="@color/black"
        app:fonts='@{"bold"}'
        />
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_1ssp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:text="You Have Selected"
        app:textSize='@{"font_body_size"}'
        android:textColor="@color/black"
        app:fonts='@{"extra_bold"}'
        />
    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_1ssp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:text="as your business category"
        app:textSize='@{"font_body_s_size"}'
        android:textColor="@color/black"
        app:fonts='@{"bold"}'
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15ssp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_height="@dimen/_40ssp"
            android:text="Cancel"
            android:layout_marginStart="@dimen/_4ssp"
            android:layout_marginVertical="@dimen/_4ssp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_8ssp"
            android:backgroundTint="@color/black"
            app:iconPadding="@dimen/_2ssp"
            android:textColor="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/_40ssp"
            android:text="Confirm"
            android:backgroundTint="#2196F3"
            android:textSize="@dimen/_10ssp"
            android:textAllCaps="false"
            android:textColor="@color/al_white"
            android:layout_marginEnd="@dimen/_4ssp"
            app:iconPadding="@dimen/_2ssp"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_marginVertical="@dimen/_4ssp" />

    </LinearLayout>

</LinearLayout>
</layout>