<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white_1000"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8ssp">

        <ImageView
            android:id="@+id/ivVisibility"
            android:layout_width="@dimen/_24ssp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_1ssp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5ssp"
            android:scaleType="fitCenter"
            android:src="@drawable/s_visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_6ssp"
            android:layout_marginEnd="@dimen/_6ssp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivPosterImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28ssp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_2ssp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:foregroundGravity="center"
                android:gravity="center"
                android:maxLines="2"
                android:text="-"
                android:textColor="#000"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRemove"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_marginEnd="@dimen/_1ssp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_4ssp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_remove"
                android:text="" />

            <ImageView
                android:id="@+id/ivLock"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_marginStart="@dimen/_1ssp"
                android:layout_marginEnd="@dimen/_1ssp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_5ssp"
                android:scaleType="fitCenter"
                android:src="@drawable/s_unlock"
                android:text="" />

            <ImageView
                android:id="@+id/ivDrag"
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:layout_marginStart="@dimen/_1ssp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_5ssp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_up_down" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
