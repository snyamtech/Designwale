<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/hearder_back"
            android:orientation="horizontal"
            android:backgroundTint="@color/primary_dark_color"
            android:layout_marginVertical="@dimen/_20ssp"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/cv_profile_image"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_60ssp"
                android:layout_marginVertical="@dimen/_25ssp"
                android:layout_marginStart="@dimen/_20ssp"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/primary_color"
                app:civ_border_width="@dimen/_3ssp"
                app:civ_shadow="false" />

            <LinearLayout
                android:id="@+id/li_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:text="John Villa"
                    android:textColor="@color/al_white"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_h7_size"}' />

                <TextView
                    android:id="@+id/txt_header_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:text="johnvilla@gmail.com"
                    android:textColor="@color/al_white"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_xs_size"}' />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>