<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="categoryData"
            type="com.snyam.designwale.items.CustomCategory" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cat_card"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_4ssp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5ssp"
            app:cardElevation="@dimen/_2ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_4ssp"
                    android:gravity="center"
                    tools:text="TextView"
                    android:text="@{categoryData.title}"
                    app:textSize='@{"font_body_s_size"}'
                    android:textColor="@color/al_white"
                    app:fonts='@{"bold"}'
                    app:layout_constraintBottom_toBottomOf="parent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>