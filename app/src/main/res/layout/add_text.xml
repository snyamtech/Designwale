<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_add_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:clickable="false"
        android:text="Add text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_add_text_remove"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:elevation="1dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_text"
        app:layout_constraintStart_toStartOf="@+id/tv_add_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_add_text_edit" />

    <ImageView
        android:id="@+id/iv_add_text_edit"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:elevation="1dp"
        android:padding="@dimen/_2ssp"
        android:src="@drawable/ic_edit"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_profile"
        android:backgroundTint="@color/black_1000"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_text"
        app:layout_constraintStart_toEndOf="@+id/iv_add_text_remove"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_text" />

</androidx.constraintlayout.widget.ConstraintLayout>