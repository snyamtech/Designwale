<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frameNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3ssp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginStart="@dimen/_3ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo_close"
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_6ssp"
            android:background="#d71b5f" />

        <FrameLayout
            android:id="@+id/fl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_4ssp"
            android:background="@drawable/red_button_background"
            android:backgroundTint="#01569a"
            android:paddingHorizontal="@dimen/_5ssp"
            android:paddingVertical="@dimen/_1ssp">

            <LinearLayout
                android:id="@+id/linearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_3ssp"
                    android:maxLines="1"
                    android:text="iam"
                    android:textColor="@color/al_white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_name_close"
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#01569a"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_2ssp">

                <FrameLayout
                    android:id="@+id/fl_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linearEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3ssp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivEmail"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_email"
                            app:tint="#FFF" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:text="i@gmail.com"
                            android:textColor="@color/al_white"
                            android:textSize="@dimen/_7ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_email_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3ssp"
                    android:layout_marginEnd="@dimen/_3ssp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linearWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_website"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_website"
                            app:tint="#FFF" />

                        <TextView
                            android:id="@+id/tv_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="www..com"
                            android:textColor="@color/al_white"
                            android:textSize="@dimen/_7ssp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_website_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linearPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_3ssp"
                            android:src="@drawable/ic_call"
                            app:tint="#FFF" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="9999999999"
                            android:textColor="@color/al_white"
                            android:textSize="@dimen/_7ssp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_phone_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d71b5f"
                android:paddingTop="@dimen/_2ssp"
                android:paddingBottom="@dimen/_2ssp">

                <LinearLayout
                    android:id="@+id/linearAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="@dimen/_10ssp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2ssp"
                        android:src="@drawable/ic_address"
                        app:tint="@color/al_white" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2ssp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="84 Vivekananda Park, Sardar Nagar"
                        android:textColor="@color/al_white"
                        android:textSize="@dimen/_7ssp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_address_close"
                    android:layout_width="@dimen/_5ssp"
                    android:layout_height="@dimen/_5ssp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</layout>