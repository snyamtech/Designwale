<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frameNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- <ImageView
             android:id="@+id/ivframebg"
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:background="@drawable/frame_05"
             android:orientation="vertical" />-->

        <LinearLayout
            android:layout_width="@dimen/_6ssp"
            android:layout_height="@dimen/_90ssp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="-5dp"
            android:background="#9C27B0"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="@dimen/_90ssp"
            android:layout_height="@dimen/_6ssp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="-5dp"
            android:background="#9C27B0"
            android:orientation="horizontal"/>

        <FrameLayout
            android:id="@+id/fl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3ssp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_marginStart="@dimen/_3ssp"
                    android:layout_marginTop="@dimen/_5ssp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo_close"
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_10ssp">

            <LinearLayout
                android:id="@+id/linearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="dasdads"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_name_close"
                android:layout_width="@dimen/_5ssp"
                android:layout_height="@dimen/_5ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2ssp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/fl_address">

                <FrameLayout
                    android:id="@+id/fl_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9C27B0"
                    android:paddingHorizontal="@dimen/_8ssp"
                    android:paddingVertical="@dimen/_1ssp">

                    <LinearLayout
                        android:id="@+id/linearWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_website"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_website"
                            app:tint="@color/al_white" />

                        <TextView
                            android:id="@+id/tv_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_3ssp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="www.google.com"
                            android:textColor="@color/al_white"
                            android:textSize="@dimen/_7ssp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_website_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9C27B0"
                    android:paddingHorizontal="@dimen/_8ssp"
                    android:paddingVertical="@dimen/_1ssp">

                    <LinearLayout
                        android:id="@+id/linearEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivEmail"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_email"
                            app:tint="@color/al_white" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3ssp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="i@gmail.com"
                            android:textColor="@color/al_white"
                            android:textSize="@dimen/_7ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_email_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/red_button_background"
                android:backgroundTint="@color/al_white"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2ssp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/linearPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="@dimen/_10ssp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_4ssp"
                        android:src="@drawable/ic_call"
                        app:tint="@color/black_1000" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="9999999999"
                        android:textColor="@color/black_1000"
                        android:textSize="@dimen/_7ssp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_phone_close"
                    android:layout_width="@dimen/_5ssp"
                    android:layout_height="@dimen/_5ssp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_1ssp"
                android:paddingHorizontal="@dimen/_8ssp"
                android:backgroundTint="#9C27B0"
                android:background="@drawable/red_button_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/linearAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="@dimen/_10ssp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_1ssp"
                        android:src="@drawable/ic_address"
                        app:tint="@color/al_white" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2ssp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="84 Vivekananda Park, Sardar Nagar"
                        android:textColor="@color/al_white"
                        android:textSize="@dimen/_7ssp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_address_close"
                    android:layout_width="@dimen/_5ssp"
                    android:layout_height="@dimen/_5ssp"
                    android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:elevation="1dp"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>