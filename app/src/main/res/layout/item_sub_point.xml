<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="pointdata"
            type="String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_2ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/_5ssp"
            android:layout_height="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_5ssp"
            app:srcCompat="@drawable/ic_circle_point"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginHorizontal="@dimen/_4ssp"
            android:text="@{pointdata}"
            android:textColor="@color/black"
            app:fonts='@{"normal"}'
            app:textSize='@{"font_body_s_size"}' />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>