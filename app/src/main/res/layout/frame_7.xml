<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameNew"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    <ImageView-->
        <!--        android:id="@+id/ivframebg"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="300dp"-->
        <!--        android:background="@drawable/frame_02"-->
        <!--        android:orientation="vertical" />-->

        <FrameLayout
            android:id="@+id/fl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_40ssp"
                    android:layout_height="@dimen/_40ssp"
                    android:layout_margin="@dimen/_3ssp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo_close"
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_10ssp">

            <LinearLayout
                android:id="@+id/linearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="dasdads"
                    android:textColor="@color/black_1000"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_name_close"
                android:layout_width="@dimen/_10ssp"
                android:layout_height="@dimen/_10ssp"
                android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                android:elevation="1dp"
                android:src="@drawable/ic_remove"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4ssp"
                android:layout_marginEnd="@dimen/_4ssp"
                android:background="@drawable/bg_frame_02"
                android:backgroundTint="#c40000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/ll_detail2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/fl_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1.5dp"
                    android:layout_marginLeft="@dimen/_1ssp"
                    android:layout_marginRight="@dimen/_3ssp"
                    android:background="@drawable/bg_frame_02"
                    android:backgroundTint="@color/white"
                    android:paddingStart="@dimen/_3ssp"
                    android:paddingTop="@dimen/_2ssp"
                    android:paddingEnd="@dimen/_3ssp"
                    android:paddingBottom="@dimen/_2ssp">

                    <LinearLayout
                        android:id="@+id/linearPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:padding="1dp"
                            android:src="@drawable/ic_call"
                            app:tint="@color/black_1000" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:maxLines="1"
                            android:text="9999999999"
                            android:textColor="@color/black_1000"
                            android:textSize="@dimen/_7ssp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_phone_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/fl_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1.5dp"
                    android:background="@drawable/bg_frame_02"
                    android:backgroundTint="@color/white"
                    android:paddingStart="@dimen/_3ssp"
                    android:paddingTop="@dimen/_2ssp"
                    android:paddingEnd="@dimen/_3ssp"
                    android:paddingBottom="@dimen/_2ssp">

                    <LinearLayout
                        android:id="@+id/linearEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivEmail"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:src="@drawable/ic_email"
                            app:tint="@color/black_1000" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="i@gmail.com"
                            android:textColor="@color/black_1000"
                            android:textSize="@dimen/_7ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_email_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1.5dp"
                    android:layout_marginLeft="@dimen/_3ssp"
                    android:layout_marginRight="1.5dp"
                    android:background="@drawable/bg_frame_02"
                    android:backgroundTint="@color/white"
                    android:paddingStart="@dimen/_3ssp"
                    android:paddingTop="@dimen/_2ssp"
                    android:paddingEnd="@dimen/_3ssp"
                    android:paddingBottom="@dimen/_2ssp">

                    <LinearLayout
                        android:id="@+id/linearWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_website"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_website"
                            app:tint="@color/black_1000" />

                        <TextView
                            android:id="@+id/tv_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:maxLines="1"
                            android:text="www.google.com"
                            android:textColor="@color/black_1000"
                            android:textSize="@dimen/_7ssp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_website_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <FrameLayout
                    android:id="@+id/fl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:paddingStart="@dimen/_3ssp"
                    android:paddingTop="@dimen/_2ssp"
                    android:paddingEnd="@dimen/_3ssp"
                    android:paddingBottom="@dimen/_2ssp">

                    <LinearLayout
                        android:id="@+id/linearAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_address"
                            android:layout_width="@dimen/_10ssp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_address"
                            app:tint="@color/black_1000" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="84 Vivekananda Park, Sardar Nagar"
                            android:textColor="@color/black_1000"
                            android:textSize="@dimen/_7ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_address_close"
                        android:layout_width="@dimen/_5ssp"
                        android:layout_height="@dimen/_5ssp"
                        android:layout_gravity="top|left|center_vertical|center_horizontal|center|start"
                        android:elevation="1dp"
                        android:src="@drawable/ic_remove"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>