<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/al_white">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_intro_4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginBottom="-98dp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_marginHorizontal="@dimen/_50ssp"
            android:layout_marginTop="@dimen/_80ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_intro_2" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/intro_title_2"
            android:textColor="@color/intro_2"
            android:layout_marginHorizontal="@dimen/_15ssp"
            app:fonts='@{"extra_bold"}'
            android:layout_marginTop="@dimen/_10ssp"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:textSize='@{"font_h5_size"}' />

        <TextView
            android:id="@+id/tv_dec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15ssp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_10ssp"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:text="@string/intro_dec_2"
            android:textColor="@color/blue_grey_800"
            app:fonts='@{"bold"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:textSize='@{"font_body_size"}' />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>