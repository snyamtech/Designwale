<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.snyam.designwale.ui.activities.ContactUsActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg_login_screen"
            app:layout_constraintBottom_toTopOf="@+id/ll_adview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="@string/login_name"
                    android:textColor="@color/black"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_size"}' />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:background="@drawable/white_shape_edit"
                    android:hint="@string/hint_name"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_10ssp"
                    android:textColorHint="@color/gray"
                    app:fonts='@{"normal"}'
                    app:textSize='@{"font_body_size"}' />

                <TextView
                    android:id="@+id/textViewsign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="@string/login_email"
                    android:textColor="@color/black"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_size"}' />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:background="@drawable/white_shape_edit"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_10ssp"
                    android:textColorHint="@color/gray"
                    app:fonts='@{"normal"}'
                    app:textSize='@{"font_body_size"}' />

                <TextView
                    android:id="@+id/textViewsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="@string/login_phone_number"
                    android:textColor="@color/black"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_size"}' />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:background="@drawable/white_shape_edit"
                    android:hint="@string/hint_phone_number"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_10ssp"
                    android:textColorHint="@color/gray"
                    app:fonts='@{"normal"}'
                    app:textSize='@{"font_body_size"}' />


                <TextView
                    android:id="@+id/textViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="@string/select"
                    android:textColor="@color/black"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_size"}' />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp">

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35ssp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/white_shape_edit"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8ssp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:text="@string/massage"
                    android:textColor="@color/black"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"font_body_size"}' />

                <EditText
                    android:id="@+id/et_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20ssp"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:background="@drawable/white_shape_edit"
                    android:gravity="top"
                    android:hint="@string/enter_details"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_10ssp"
                    android:textColorHint="@color/gray"
                    app:fonts='@{"normal"}'
                    app:textSize='@{"font_body_size"}' />


                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_10ssp"
                    android:backgroundTint="@color/blue_color"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_8ssp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/al_white"
                    app:fonts='@{"bold"}'
                    app:textSize='@{"button_text_16"}' />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_adview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>